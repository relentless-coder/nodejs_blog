{
	"env": {
		"es6": true,
		"node": true,
		"browser": true

	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"sourceType": "module"
	},
	"parser": "babel-eslint",
	"rules": {
		"indent": [2, 4],
		"no-console": 0,
		"no-unused-vars": 0,
		"no-useless-escape": 0,
		"no-mixed-spaces-and-tabs": 0,
		"linebreak-style": ["error","unix"],
		"quotes": ["error","single"],
		"semi": ["error","always"]
	}

}

